    <div id='content'>
      <div id='page'>
	<div id='banner'>
	  <a href="/"><img height="73" src="http://style1.ravelrycache.com/images/ravelry-logo.gif" 
			   title="Ravelry!" width="213" /></a>
	</div>

	<%= yield %>
	</div>  
      </div>
  </body>
</html>
